#This configuration file loads a weblogic plugin module.

LoadModule weblogic_module modules/mod_wl_24.so

<IfModule mod_weblogic.c>
  #Unless dynamic is turned off, the cluster should update itself once this starts...
  #The following servers "seed" the cluster settings.
  #I've set this to a single server to prove the clustering and wls plugin is working.
  WebLogicCluster     {{ inventory_hostname }}:{{ managed_server_ssl_port }}
  DebugConfigInfo     {{ weblogic_plugin_debug }}
  SecureProxy         ON
  WLSSLWallet         {{ oracle_base }}/certs/wallet

  <Location / >
    SetHandler weblogic-handler
    WLSRequest ON
  </Location>

</IfModule>
